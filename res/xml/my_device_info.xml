<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="my_device_info_pref_screen"
    android:title="@string/about_settings">

    <com.android.settingslib.widget.LayoutPreference
        android:key="superior_info"
        android:layout="@layout/about_phone_info"
        android:selectable="false" />

        <!-- Device name -->
        <com.android.settings.widget.ValidatedEditTextPreference
            android:key="device_name"
            android:title="@string/my_device_info_device_name_preference_title"
            android:summary="@string/summary_placeholder"
            android:icon="@drawable/ic_settings_display_acc"
            settings:controller="com.android.settings.deviceinfo.DeviceNamePreferenceController"
            settings:layout="@layout/superior_dashboard_preference_top"
            settings:enableCopying="true"/>

        <!-- Build number -->
        <Preference
            android:key="build_number"
            android:title="@string/build_number"
            android:summary="@string/summary_placeholder"
            android:icon="@drawable/ic_build_acc"
            settings:enableCopying="true"
            settings:layout="@layout/superioros_dashboard_preference_middle"
            settings:controller="com.android.settings.deviceinfo.BuildNumberPreferenceController"/>

        <!-- Model & hardware -->
        <Preference
            android:key="device_model"
            android:title="@string/model_name"
            android:summary="@string/model_summary"
            android:icon="@drawable/ic_settings_system_dashboard_acc"
            android:fragment="com.android.settings.deviceinfo.hardwareinfo.HardwareInfoFragment"
            settings:enableCopying="true"
            settings:keywords="@string/keywords_model_and_hardware"
            settings:layout="@layout/superior_dashboard_preference_middle"
            settings:controller="com.android.settings.deviceinfo.HardwareInfoPreferenceController"/>

        <!-- Android version -->
        <Preference
            android:key="firmware_version"
            android:title="@string/firmware_version"
            android:summary="@string/summary_placeholder"
            android:icon="@drawable/ic_android_acc"
            settings:layout="@layout/superior_dashboard_preference_bottom"
            android:fragment="com.android.settings.deviceinfo.firmwareversion.FirmwareVersionSettings"
            settings:controller="com.android.settings.deviceinfo.firmwareversion.FirmwareVersionPreferenceController"/>

        <!-- Device up time -->
        <Preference
            android:key="up_time"
            android:title="@string/status_up_time"
            android:summary="@string/summary_placeholder"
            android:icon="@drawable/ic_uptime"
            settings:layout="@layout/superioros_dashboard_preference_top"
            android:selectable="false"/>

        <Preference
            android:key="legal_container"
            android:title="@string/legal_information"
            android:icon="@drawable/ic_doc"
            settings:layout="@layout/superior_dashboard_preference_bottom"
            android:fragment="com.android.settings.LegalSettings"/>

        <Preference
            android:key="regulatory_info"
            settings:layout="@layout/superior_dashboard_preference_top"
            android:title="@string/regulatory_labels">
            <intent android:action="android.settings.SHOW_REGULATORY_INFO"/>
        </Preference>

        <Preference
            android:key="safety_info"
            settings:layout="@layout/superior_dashboard_preference_middle"
            android:title="@string/safety_and_regulatory_info"/>

        <!-- Manual -->
        <Preference
            android:key="manual"
            settings:layout="@layout/superior_dashboard_preference_middle"
            android:title="@string/manual">
            <intent android:action="android.settings.SHOW_MANUAL"/>
        </Preference>

        <!-- Feedback on the device -->
        <Preference
            android:key="device_feedback"
            android:title="@string/device_feedback"
            settings:layout="@layout/superior_dashboard_preference_middle"
            settings:keywords="@string/keywords_device_feedback"/>

        <!-- Device FCC equipment id -->
        <Preference
            android:key="fcc_equipment_id"
            android:title="@string/fcc_equipment_id"
            settings:layout="@layout/superior_dashboard_preference_bottom"
            android:summary="@string/summary_placeholder"/>

</PreferenceScreen>
